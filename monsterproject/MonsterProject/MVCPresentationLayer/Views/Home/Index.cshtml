@{
    ViewBag.Title = "Home Page";
}

<div class="mask">
        <div class="container" style="padding-bottom:130px">
            <div class="row text-center">
                <div class="col-lg-12 text-center">
                    <h1 style="padding-top:60px">Welcome to Monster.NET</h1>
                    <p class="lead">Monster.NET is a website storing information on monsters in Monster Hunter Rise/Sunbreak</p>
                    <p><a href="https://www.monsterhunter.com/rise-xwp/en-us/" class="btn btn-primary btn-lg" target="_blank" style="display:initial">Learn more about Monster Hunter &raquo;</a></p>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-md-6">
                    <h2>Get started searching for Monsters</h2>
                    <p>
                        Monster.NET shows information on the monsters in the Monster Hunter Series, including details on a monsters
                        weaknesses, locations, and their parts. Click below to go to the full list of monsters.
                    </p>
                    <p>@Html.ActionLink("Go to Monsters", "RedirectMonsters", new object { }, new { @class = "btn btn-primary" })</p>
                </div>
                <div class="col-md-6">
                    <h2>Search Materials</h2>
                    <p>
                        Monster.Net also stores information on monster materials, including their price, droprates for a monster and
                        for broken parts. Click below to view the full list of materials
                    </p>
                    <p>@Html.ActionLink("Go to Materials", "RedirectMaterials", new object { }, new { @class = "btn btn-primary" })</p>
                </div>
            </div>
        </div>
</div>
