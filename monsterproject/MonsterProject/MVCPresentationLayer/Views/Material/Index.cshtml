@model IEnumerable<DataObjects.MaterialVM>


<h2>@ViewBag.Title</h2>
<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        @Html.ActionLink("Create New Material", "Create", new object { }, new { @class = "btn btn-primary" })
    }
</p>
<div class="maskWall">
    <div class="container">
        <table class="table">
            <tr>
                <th>
                    Monster Icon
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MonsterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaterialName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        <img src="@ViewBag.monsterIcons[i]" onerror="this.src='/Content/Images/QuestionMarkIcon.jpg'" height="80" width="80" />
                    </td>
                    <td>
                        <p>@Model.ElementAt(i).MonsterName</p>
                    </td>
                    <td>
                        <p>@Model.ElementAt(i).MaterialName</p>
                    </td>
                    <td>
                        <p>@Model.ElementAt(i).Price</p>
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = @Model.ElementAt(i).MaterialID }, new { @class = "btn btn-primary" })
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = @Model.ElementAt(i).MaterialID }, new { @class = "btn btn-primary" })

                            @Html.ActionLink("Add Part Drop", "AddPartDrop", new { id = @Model.ElementAt(i).MaterialID }, new { @class = "btn btn-primary" })
                        }
                    </td>
                </tr>
            }
        </table>
     </div>
</div>
