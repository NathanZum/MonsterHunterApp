@model DataObjects.MaterialVM
<style>
    .maskMonsterMaterial ::before {
        background-image: linear-gradient(45deg, rgba(15,54,170,0.85) 32%, rgba(70,177,232,0.55) 69%), url( @ViewBag.Image );
    }
</style>

<div>
    <h4>@Model.MaterialName</h4>
    <hr />
    <p>
        @Html.ActionLink("Back to List", "Index", new object { }, new { @class = "btn btn-primary" })
    </p>
    <div class="maskMonsterMaterial">
        <div class="container">
            <div class="row text-center">
                <div class="col-sm-4">
                    <h3>@Html.DisplayFor(model => model.MonsterName)</h3>
                    <img src="@ViewBag.Image" onerror="this.src='/Content/Images/QuestionMarkIcon.jpg'" height="70%" width="70%" />
                    <h1>@Html.DisplayFor(model => model.MaterialName)</h1>
                    <p>Price: @Html.DisplayFor(model => model.Price) </p>
                </div>

                <div class="col-sm-4">
                    <h3>Material Droprates</h3>
                    <p> 1.00 = 100%</p>
                    <table class="table">
                        <tr>
                            <th class="text-center">
                                Type
                            </th>
                            <th class="text-center">
                                Rate
                            </th>
                        </tr>
                        @foreach (var droprate in Model.DropRates)
                        {
                            <tr>
                                <td>
                                    @droprate.DropTypeName
                                </td>
                                <td>
                                    @droprate.DropRate
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="col-sm-4">
                    <h3>Broken Part Droprates</h3>
                    <p> 1.00 = 100%</p>
                    <table class="table">
                        <tr>
                            <th class="text-center">
                                Part Name
                            </th>
                            <th class="text-center">
                                Rate
                            </th>
                        </tr>
                        @foreach (var droprate in Model.PartDropRates)
                        {
                            <tr>
                                <td>
                                    @droprate.PartName
                                </td>
                                <td>
                                    @droprate.DropRate
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    </div>
        <p>
            @Html.ActionLink("Back to List", "Index", new object { }, new { @class = "btn btn-primary" })
        </p>
