@model IEnumerable<DataObjects.Monster>

@{
    ViewBag.Title = "Monster List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
    {
        @Html.ActionLink("Create New Monster", "Create", new object { }, new { @class = "btn btn-primary inline" })
        @Html.ActionLink("Create New Terrain", "CreateTerrain", new object { }, new { @class = "btn btn-primary inline" })
    }
</p>
<div class="maskWall">
    <div class="container">
        <table class="table">
            <tr>
                <th>
                    Icon
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MonsterName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MonsterType)
                </th>
                <th></th>
            </tr>

            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>
                        <img src="@ViewBag.monsterIcons[i]" onerror="this.src='/Content/Images/QuestionMarkIcon.jpg'" height="150" width="150" />
                    </td>
                    <td>
                        <p>@Model.ElementAt(i).MonsterName</p>
                    </td>
                    <td>
                        <p>@Model.ElementAt(i).MonsterType</p>
                    </td>
                    <td>
                        @Html.ActionLink("Details", "Details", new { id = @Model.ElementAt(i).MonsterID }, new { @class = "btn btn-primary" })
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            @Html.ActionLink("Edit", "Edit", new { id = @Model.ElementAt(i).MonsterID }, new { @class = "btn btn-primary" })
                            @Html.ActionLink("Assign Terrain", "AssignTerrain", new { id = @Model.ElementAt(i).MonsterID }, new { @class = "btn btn-primary" })
                        }
                    </td>
                </tr>

            }
        </table>
    </div>
</div>
