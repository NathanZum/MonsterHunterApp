@model DataObjects.MonsterVM

@{
    ViewBag.Title = "AssignTerrain";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Assign Terrain</h2>

<div>
    <h4>@Model.MonsterName</h4>
    <hr />
    <p>
        @Html.ActionLink("Back to List", "Index", new object { }, new { @class = "btn btn-primary" })
    </p>
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4">
                <img src="@ViewBag.Image" onerror="this.src='/Content/Images/QuestionMarkIcon.jpg'" height="300" width="300" />
                <h1>@Html.DisplayFor(model => model.MonsterName)</h1>
            </div>
            <div class="col-md-4">
                <h3>Monster Locations</h3>
                <table class="table">
                    <tr>
                        <th class="text-center">
                            Terrain
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var terrain in Model.Terrains)
                    {
                        <tr>
                            <td>
                                @terrain.TerrainName
                            </td>
                            <td>
                                @Html.ActionLink("Remove Terrain", "RemoveTerrain",
                          new { monsterid = Model.MonsterID, terrainid = @terrain.TerrainID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
            <div class="col-md-4">
                <h3>Unassigned Locations</h3>
                <table class="table">
                    <tr>
                        <th class="text-center">
                            Terrain
                        </th>
                        <th></th>
                    </tr>
                    @foreach (var terrain in ViewBag.Terrains)
                    {
                        <tr>
                            <td>
                                @terrain.TerrainName
                            </td>
                            <td>
                                @Html.ActionLink("Add Terrain", "AddTerrain",
                          new { monsterid = Model.MonsterID, terrainid = @terrain.TerrainID }, new { @class = "btn btn-primary" })
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>
<p>
    @Html.ActionLink("Back to List", "Index", new object { }, new { @class = "btn btn-primary" })
</p>
