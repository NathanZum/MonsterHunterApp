@model DataObjects.MonsterVM
<style>
    .maskMonster ::before{
        background-image: linear-gradient(48deg, rgba(191,15,15,0.75) 34%, rgba(139,17,40,0.45) 73%), url( @ViewBag.Image );
    }
</style>

<div>
    <h4>@Model.MonsterName</h4>
    <hr />
    <p>
        @Html.ActionLink("Back to List", "Index", new object { }, new { @class = "btn btn-primary" })
    </p>
    <div class="maskMonster">
        <div class="container">
            <div class="row text-center">
                <div class="col-md-4">
                    <img src="@ViewBag.Image" onerror="this.src='/Content/Images/QuestionMarkIcon.jpg'" width="70%" height="70%" />
                    <h1>@Html.DisplayFor(model => model.MonsterName)</h1>
                    <p>Monster Type : @Html.DisplayFor(model => model.MonsterType)</p>
                </div>
                <div class="col-md-4">
                    <h3>Monster Locations</h3>
                    <table class="table">
                        <tr>
                            <th class="text-center">
                                Terrain
                            </th>
                        </tr>
                        @foreach (var terrain in Model.Terrains)
                        {
                            <tr>
                                <td>
                                    @terrain.TerrainName
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="col-md-4">
                    <h3>Monster Weaknesses</h3>
                    <table class="table">
                        <tr>
                            <th class="text-center">
                                Type
                            </th>
                            <th class="text-center">
                                Effectiveness
                            </th>
                        </tr>
                        @foreach (var weakness in Model.Weaknesses)
                        {
                            <tr>
                                <td>
                                    @weakness.Name
                                </td>
                                <td>
                                    @weakness.Effectiveness
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
            <div class="row text-center">
                <div class="col-lg-6">
                    <h3>Monster Parts</h3>
                    <table class="table">
                        <tr>
                            <th>
                                Part Name
                            </th>
                            <th>
                                Fire
                            </th>
                            <th>
                                Water
                            </th>
                            <th>
                                Thunder
                            </th>
                            <th>
                                Ice
                            </th>
                            <th>
                                Dragon
                            </th>
                            <th>
                                Cut
                            </th>
                            <th>
                                Blunt
                            </th>
                            <th>
                                Ammo
                            </th>
                        </tr>
                        @foreach (var part in Model.Parts)
                        {
                            <tr>
                                <td>
                                    @part.PartName
                                </td>
                                <td>
                                    @part.Fire
                                </td>
                                <td>
                                    @part.Water
                                </td>
                                <td>
                                    @part.Thunder
                                </td>
                                <td>
                                    @part.Ice
                                </td>
                                <td>
                                    @part.Dragon
                                </td>
                                <td>
                                    @part.Cut
                                </td>
                                <td>
                                    @part.Blunt
                                </td>
                                <td>
                                    @part.Ammo
                                </td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="col-lg-6">
                    <h3>Monster Materials</h3>
                    <table class="table">
                        <tr>
                            <th class="text-center">
                                Material Name
                            </th>
                            <th class="text-center">
                                Price
                            </th>
                        </tr>
                        @foreach (var material in Model.Materials)
                        {
                            <tr>
                                <td>
                                    @Html.ActionLink(@material.MaterialName, "MaterialRedirect", new { id = material.MaterialID }, new { @class = "a-redirect" })
                                </td>
                                <td>
                                    @material.Price
                                </td>
                            </tr>
                        }
                    </table>
                </div>
            </div>
        </div>
    </div>
    <p>
        @Html.ActionLink("Back to List", "Index", new object { }, new { @class = "btn btn-primary" })
    </p>
</div>